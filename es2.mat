
% Initialize B %
function B = calcOnB(n)
	B = zeros(n,n);
	for i = 1:n
		for j = 1:n
			if i==j
				B(i,j) = 1;
			elseif i<j
				B(i,j) = -1;
			else
				B(i,j) = 0;
			end
		end
	end
	
	% Print B %
	B;
	[ev,ew] = eig(B);
	%norm(B)
	%norm(B^-1)
	S = svd(B);
	C = cond(B);
	
	B(n,1) += -2^(2-n);
	ewBperturbata = eig(B)
	S = svd(B)
	rank = rank(B)
	N = null(B)
	n
	Imm = orth(B)
	
	

end

