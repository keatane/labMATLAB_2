d0 = 1;
d1 = 1;
m = 10*(d0+1)+d1;

A = ones(m,3);
for i = 1:m
	A(i,2) = i/m;
	A(i,3) = (i/m)^2;
end

y = ones(m);
for i = 1:m
	y(i) = sin(i/m);
end

% Inversa generalizzata 
% x_spada = sommatoria di ((ui^t*y)/sigma_i) * vi

[U,S,V] = svd(A,0);
%x1 = V*((U'*y)./diag(S))

[Q,R] = qr(A);
[row,col] = size(R);
H = transpose(Q) * y;
h1 = H(1:col,:);
subR = R(1:col,:);
x2 = subR \ h1

At = transpose(A);
x3 = At*A \ At*y

x4 = A\y 
